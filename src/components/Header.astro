---
import { SITE_TITLE } from '../consts';
import { getMenu } from '../lib/wordpress';

const menuItems = await getMenu();
---

<header>
	<nav>
		<h2><a href="/">{SITE_TITLE}</a></h2>
		
		<div class="menu-backdrop"></div>

		<div class="nav-wrapper">
			<a href="/" class="home-icon" title="Home">
				<svg viewBox="0 0 24 24" aria-hidden="true" width="24" height="24">
					<path fill="currentColor" d="M10 20v-6h4v6h5v-8h3L12 3 2 12h3v8z"/>
				</svg>
				<span class="sr-only">Home</span>
			</a>
			<div class="internal-links">
				{menuItems.length > 0 ? (
					menuItems.map((item) => {
						const url = new URL(item.url);
						return <a href={url.pathname}>{item.title}</a>;
					})
				) : (
					<>
						<a href="/">Home</a>
						<a href="/blog">Blog</a>
						<a href="/about">About</a>
					</>
				)}
			</div>
			<div class="mobile-social-links">
				<a href="/contact" title="Contact">
					<span class="sr-only">Email</span>
					<svg viewBox="0 0 24 24" aria-hidden="true" width="32" height="32">
						<path fill="currentColor" d="M20 4H4c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"></path>
					</svg>
				</a>
				<a href="https://www.facebook.com/groups/372993659852080" target="_blank" rel="noopener noreferrer">
					<span class="sr-only">Facebook group</span>
					<svg viewBox="0 0 24 24" aria-hidden="true" width="32" height="32">
						<path fill="currentColor" d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"></path>
					</svg>
				</a>
			</div>
		</div>

		<button class="mobile-menu-toggle" aria-label="Toggle menu">
			<span></span>
			<span></span>
			<span></span>
		</button>

		<div class="social-links">
			<a href="/contact" title="Contact">
				<span class="sr-only">Email</span>
				<svg viewBox="0 0 24 24" aria-hidden="true" width="32" height="32"
					><path
						fill="currentColor"
						d="M20 4H4c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"
					></path></svg
				>
			</a>
			<a href="https://www.facebook.com/groups/372993659852080" target="_blank" rel="noopener noreferrer">
				<span class="sr-only">Facebook group</span>
				<svg viewBox="0 0 24 24" aria-hidden="true" width="32" height="32"
					><path
						fill="currentColor"
						d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"
					></path></svg
				>
			</a>
		</div>
	</nav>
</header>

<script>
	const toggle = document.querySelector('.mobile-menu-toggle');
	const nav = document.querySelector('.nav-wrapper');
	const backdrop = document.querySelector('.menu-backdrop');
	
	function closeMenu() {
		toggle?.classList.remove('active');
		nav?.classList.remove('active');
		backdrop?.classList.remove('active');
	}
	
	toggle?.addEventListener('click', () => {
		toggle.classList.toggle('active');
		nav?.classList.toggle('active');
		backdrop?.classList.toggle('active');
	});

	backdrop?.addEventListener('click', closeMenu);

	document.querySelectorAll('.internal-links a').forEach(link => {
		link.addEventListener('click', closeMenu);
	});
</script>

<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: white;
		box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
		color: #1f2937;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		position: relative;
		gap: 2em;
	}
	
	.nav-wrapper {
		display: flex;
		align-items: center;
		gap: 1em;
		flex: 1;
		justify-content: center;
	}
	
	.home-icon {
		display: flex;
		align-items: center;
		padding: 0.5em;
		color: #1f2937;
		border-bottom: none !important;
		transition: color 0.2s;
	}
	
	.home-icon:hover {
		color: #2563eb;
		border-bottom: none !important;
	}
	
	.internal-links {
		display: flex;
		gap: 0.5em;
	}
	
	nav a {
		padding: 1em 0.5em;
		color: #1f2937;
		border-bottom: 4px solid transparent;
		text-decoration: none;
		transition: border-color 0.2s;
	}
	nav a:hover {
		border-bottom-color: #2563eb;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: #2563eb;
	}
	.social-links,
	.social-links a {
		display: flex;
	}

	.mobile-social-links {
		display: none;
	}

	.mobile-menu-toggle {
		display: none;
		flex-direction: column;
		gap: 5px;
		background: none;
		border: none;
		cursor: pointer;
		padding: 8px;
		z-index: 1001;
	}

	.mobile-menu-toggle span {
		display: block;
		width: 25px;
		height: 3px;
		background: #1f2937;
		transition: all 0.3s ease;
		border-radius: 3px;
	}

	.mobile-menu-toggle.active span:nth-child(1) {
		transform: translateY(8px) rotate(45deg);
	}

	.mobile-menu-toggle.active span:nth-child(2) {
		opacity: 0;
	}

	.mobile-menu-toggle.active span:nth-child(3) {
		transform: translateY(-8px) rotate(-45deg);
	}

	.menu-backdrop {
		display: none;
	}

	@media (max-width: 768px) {
		.mobile-menu-toggle {
			display: flex;
		}

		.menu-backdrop {
			display: block;
			position: fixed;
			top: 0;
			left: 0;
			width: 100%;
			height: 100%;
			background: rgba(0, 0, 0, 0.5);
			opacity: 0;
			visibility: hidden;
			transition: opacity 0.3s, visibility 0.3s;
			z-index: 999;
		}

		.menu-backdrop.active {
			opacity: 1;
			visibility: visible;
		}

		.nav-wrapper {
			position: fixed;
			top: 0;
			right: -100%;
			width: 70%;
			max-width: 300px;
			height: 100vh;
			background: white;
			flex-direction: column;
			align-items: flex-start;
			padding: 80px 2em 2em;
			box-shadow: -2px 0 10px rgba(0, 0, 0, 0.1);
			transition: right 0.3s ease;
			z-index: 1000;
		}

		.nav-wrapper.active {
			right: 0;
		}

		.internal-links {
			display: flex;
			flex-direction: column;
			width: 100%;
		}

		.internal-links a {
			padding: 1em 0;
			border-bottom: 1px solid #e5e7eb;
			border-left: none;
			width: 100%;
		}
		
		.internal-links a:hover {
			border-bottom-color: #e5e7eb;
			color: #2563eb;
		}

		.social-links {
			display: none;
		}

		.mobile-social-links {
			display: flex;
			gap: 1em;
			margin-top: auto;
			padding-top: 2em;
		}

		.mobile-social-links a {
			display: flex;
			padding: 0.5em;
			color: #1f2937;
			border-bottom: none !important;
		}

		.mobile-social-links a:hover {
			color: #2563eb;
		}
	}
</style>
